<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="IMDS AutoQA Regression Suite" verbose="1" parallel="classes" thread-count="4">

  <listeners>
    <listener class-name="autoqa.reporting.AllureListener"/>
  </listeners>

  <test name="Model Tests">
    <packages>
      <package name="autoqa.model"/>
    </packages>
  </test>

  <test name="Player Tests">
    <packages>
      <package name="autoqa.player"/>
    </packages>
  </test>

  <test name="Recorder Tests">
    <packages>
      <package name="autoqa.recorder"/>
    </packages>
  </test>

  <test name="AI Tests">
    <packages>
      <package name="autoqa.ai"/>
    </packages>
  </test>

  <test name="Vision Tests">
    <packages>
      <package name="autoqa.vision"/>
    </packages>
  </test>

  <test name="Reporting Tests">
    <packages>
      <package name="autoqa.reporting"/>
    </packages>
  </test>

  <test name="Data Tests">
    <packages>
      <package name="autoqa.data"/>
    </packages>
  </test>

</suite>
