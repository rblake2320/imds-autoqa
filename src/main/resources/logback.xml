<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <property name="LOG_DIR"     value="logs"/>
  <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} — %msg%n"/>

  <!-- ─── Console appender ─────────────────────────────────────────── -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- ─── Rolling file appender ────────────────────────────────────── -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/autoqa.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/autoqa.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
          class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>14</maxHistory>
      <totalSizeCap>500MB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- ─── Healing-specific log (audit trail) ───────────────────────── -->
  <appender name="HEALING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/healing.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/healing.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n</pattern>
    </encoder>
  </appender>

  <!-- ─── Logger declarations ──────────────────────────────────────── -->
  <logger name="autoqa.ai" level="DEBUG"/>
  <logger name="autoqa.player" level="DEBUG"/>
  <logger name="autoqa.recorder" level="DEBUG"/>
  <logger name="autoqa.ai.HealingInterceptor" level="DEBUG" additivity="false">
    <appender-ref ref="HEALING_FILE"/>
    <appender-ref ref="CONSOLE"/>
  </logger>

  <!-- Reduce noise from third-party libs -->
  <logger name="org.openqa.selenium"    level="WARN"/>
  <logger name="io.netty"               level="WARN"/>
  <logger name="com.github.kwhat"       level="WARN"/>
  <logger name="okhttp3"                level="INFO"/>
  <logger name="org.testng"             level="INFO"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
